# Environment variables declared in this file are available at build time and runtime.
# Next.js will load environment variables from .env.local into process.env

# Database
DATABASE_URL="postgresql://user:password@host:5432/database"

# Whop App Configuration (App-scoped authentication)
# Get these from your Whop Developer Portal after creating your app
WHOP_APP_SERVER_KEY="your_app_server_key_here"
WHOP_WEBHOOK_SECRET="your_webhook_secret_here"
NEXT_PUBLIC_WHOP_APP_ID="app_xxxxx"
NEXT_PUBLIC_WHOP_AGENT_USER_ID="user_xxxxx" # Optional

# Whop Pro Plan ID (REQUIRED for in-app upgrade button)
# Get this from: Whop Dev Portal → Access Passes → Click on "Pro" → View Pricing → 3-dot menu → Copy Plan ID
# Format: plan_xxxxx
NEXT_PUBLIC_WHOP_PRO_PLAN_ID="plan_xxxxx"

# App URL (for OAuth redirects)
NEXT_PUBLIC_APP_URL="http://localhost:3000" # Change to your production URL in production

# Security
CRON_SECRET="your_random_secret_here_change_this_in_production"

# Resend Email Configuration
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY="re_your_api_key_here"

# Email address to send from (must be verified in Resend)
# For testing, you can use: onboarding@resend.dev
RESEND_FROM_EMAIL="Analytics Dashboard <onboarding@resend.dev>"

# Default recipient for weekly reports (comma-separated for multiple recipients)
REPORT_EMAIL="your@email.com"

# DEPRECATED - Per-user API keys are no longer used
# Use WHOP_APP_SERVER_KEY instead for app-scoped authentication
# WHOP_API_KEY (removed)
# WHOP_SK (removed)

# ============================================
# Webhook Testing (for .env.local)
# ============================================
# For testing webhooks locally, create .env.local with:
# WHOP_WEBHOOK_SECRET=your_webhook_secret
# PROD_URL=https://your-vercel-app.vercel.app
